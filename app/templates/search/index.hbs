<div class="row">
  <div class="col-xs-12">
    <div class="search-result--list">
      {{#each recipes as |recipe|}}
        <div class="search-result--item recipe">
          <img class="search-result--image" src={{{recipe.imageUrl}}} alt={{recipe.title}}>
          <div class="search-result--body">
            <h4 class="search-result--heading">{{recipe.title}}</h4>
            <p class="search-result--description">
              {{recipe.description}}
            </p>
            <button {{action 'addToBacklog' recipe}}>Add</button>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>
