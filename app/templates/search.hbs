<div class="container search">
  <div class="row">
    <div class="col-xs-12">
      <form {{action 'search' term on="submit"}} class="search--form">
        <div class="input-group input-group-lg">
          {{input value=term placeholder="Search recipes..." class="search--input form-control"}}
          <span class="input-group-btn">
            <button class="btn btn-default" type="button">Search</button>
          </span>
        </div>
      </form>
    </div>
  </div>
  {{outlet}}
</div>
